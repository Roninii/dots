{
  // UI
  "theme": "One Dark",
  "ui_font_size": 14,
  "ui_font_family": "Zed Plex Sans",
  "buffer_font_size": 14,
  "buffer_font_family": "MonoLisaCustom Nerd Font",
  "show_whitespaces": "all",
  "inlay_hints": {
    "enabled": true
  },
  "preview_tabs": {
    "enabled": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic"
      },
      "keyword": {
        "font_style": "italic"
      }
    }
  },

  // VIM Settings
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "use_multiline_find": true,
    "relative_line_numbers": true,
    "toggle_relative_line_numbers": true
  },
  "scrollbar": {
    "show": "never"
  },
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "vertical_scroll_margin": 10,

  // MCP Settings
  "context_servers": {
    "Context7": {
      "command": {
        "path": "npx",
        "args": ["-y", "@upstash/context7-mcp@latest"]
      },
      "settings": {}
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  // Use Zed's built-in UI for modals instead of the MacOS options that are not keyboard friendly.
  "use_system_prompts": false,

  // Assistant Settings
  "assistant": {
    "always_allow_tool_actions": true,
    "default_open_ai_model": "gpt-4o",
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-thinking-latest"
    },
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "web_search": true,
          "contents": true,
          "code_actions": true,
          "open": true,
          "terminal": true,
          "batch_tool": true,
          "code_symbols": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "symbol_info": true,
          "thinking": true,
          "create_directory": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "version": "2"
  },

  // Misc
  "git": {
    "inline_blame": {
      "delay_ms": 500,
      "show_commit_summary": true
    }
  },
  "terminal": {
    "copy_on_select": true,
    "button": false,
    "line_height": "standard"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
