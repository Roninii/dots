{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "theme": "Kanagawa Wave",
  "ui_font_size": 14,
  "ui_font_family": "Zed Plex Sans",
  "buffer_font_size": 14,
  "buffer_font_family": "MonoLisaCustom Nerd Font",
  "show_whitespaces": "all",
  "inlay_hints": {
    "enabled": true
  },
  "preview_tabs": {
    "enabled": true
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "git": {
    "inline_blame": {
      "delay_ms": 500,
      "show_commit_summary": true
    }
  },
  "terminal": {
    "copy_on_select": true,
    "button": false,
    "line_height": "standard"
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "use_multiline_find": true
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic"
      }
    }
  }
}
